{
    "tabWidth": 4,
    "printWidth": 100,
    "semi": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "parser": "typescript",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "parser": "json",
          "tabWidth": 2
        }
      },
      {
        "files": ".prettierrc",
        "options": {
          "parser": "json",
          "tabWidth": 2
        }
      },
      {
        "files": ".eslintrc",
        "options": {
          "parser": "json",
          "tabWidth": 2
        }
      },
      {
        "files": ["*.yml", "*.yaml"],
        "options": {
          "parser": "yaml",
          "singleQuote": true,
          "tabWidth": 2
        }
      },
      {
        "files": ["*.ts", "**/*.ts"],
        "options": {
          "parser": "typescript"
        }
      }
    ]
  }